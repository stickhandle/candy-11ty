---
permalink: /blog/
title: Blog
layout: layouts/page.njk
---
<div class="row">
  <div class="col">
    <blockquote cite="Scott Adams">You don't argue with a four-year old about why he shouldn't eat candy for dinner.</blockquote>
  </div>
</div>
{% set cls = cycler("odd", "even") %}
{%- for post in collections.posts %}
<div class="blog-list-item {{ cls.next() }}">
    <div class="row">
        {% if post.data.mainImageFilename -%}
            {% if cls.current == 'odd' -%}
                <div class="col-4 main-image">
                    <a href="{{ post.url }}">
                        <img src="/images/{{ post.data.mainImageFilename }}-{{ post.data.thumbImageSize }}.{{ post.data.mainImageExt }}" alt="{{ post.data.mainImageTitle | safe }}" title="{{ post.data.mainImageTitle | safe }}">
                    </a>
                </div>
                <div class="col-8">
                    <div class="row">
                        <div class="col">
                            <h3><a class="title-href" href="{{ post.url }}">{{ post.data.title }}</a></h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col postline">
                            <div class="tags">
                                <i class="fas fa-tags"></i>
                                {% for tag in post.data.tags -%}
                                    <div><a href="/tags/#{{ tag }}" class="tag">#{{ tag }}</a></div>
                                {% endfor -%}
                            </div>
                            <div class="postdate">
                                <i class="fas fa-calendar-day"></i>
                                <div>Last updated on {{ post.date | formatDisplayDate }}</div>
                            </div>
                        </div>
                    </div>
                    {% if post.data.excerpt -%}
                        <div class="row">
                            <div class="col excerpt">{{ post.templateContent | excerpt | safe }}
                                <div class="more">... <a href="{{ post.url }}">continue</a></div>
                            </div>
                        </div>
                    {% endif -%}
                </div>
            {% else -%}
                <div class="col-8">
                    <div class="row">
                        <div class="col">
                            <h3><a class="title-href" href="{{ post.url }}">{{ post.data.title }}</a></h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col postline">
                            <div class="tags">
                                <i class="fas fa-tags"></i>
                                {% for tag in post.data.tags -%}
                                    <div><a href="/tags/#{{ tag }}" class="tag">#{{ tag }}</a></div>
                                {% endfor -%}
                            </div>
                            <div class="postdate">
                                <i class="fas fa-calendar-day"></i>
                                <div>Last updated on {{ post.date | formatDisplayDate }}</div>
                            </div>
                        </div>
                    </div>
                    {% if post.data.excerpt -%}
                        <div class="row">
                            <div class="col excerpt">{{ post.templateContent | excerpt | safe }}
                                <div class="more">... <a href="{{ post.url }}">continue</a></div>
                            </div>
                        </div>
                    {% endif -%}
                </div>
                <div class="col-4 main-image">
                    <a href="{{ post.url }}">
                        <img src="/images/{{ post.data.mainImageFilename }}-{{ post.data.thumbImageSize }}.{{ post.data.mainImageExt }}" alt="{{ post.data.mainImageTitle | safe }}" title="{{ post.data.mainImageTitle | safe }}">
                    </a>
                </div>
            {% endif -%}
        {% else -%}
            <div class="col">
                <div class="row">
                    <div class="col">
                        <h3><a class="title-href" href="{{ post.url }}">{{ post.data.title }}</a></h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col postline">
                        <div class="tags">
                            <i class="fas fa-tags"></i>
                            {% for tag in post.data.tags -%}
                                <div><a href="/tags/#{{ tag }}" class="tag">#{{ tag }}</a></div>
                            {% endfor -%}
                        </div>
                        <div class="postdate">
                            <i class="fas fa-calendar-day"></i>
                            <div>Last updated on {{ post.date | formatDisplayDate }}</div>
                        </div>
                    </div>
                </div>
                {% if post.data.excerpt -%}
                    <div class="row">
                        <div class="col excerpt">{{ post.templateContent | excerpt | safe }}
                            <div class="more">... <a href="{{ post.url }}">continue</a></div>
                        </div>
                    </div>
                {% endif -%}
            </div>
        {% endif -%}
    </div>
</div>
{%- endfor %}

